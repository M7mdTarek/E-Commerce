@model ITI_Project.Models.Person

@{
    ViewData["Title"] = "EditSeller";
}

<h1>Edit @Model.Name</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSeller" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" value="@Model.Id" type="hidden" class="form-control" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Go Back</a>
                <input type="submit" value="Save" class="btn btn-success text-white" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
